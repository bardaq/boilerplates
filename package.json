{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "monorepo boilerplate",
  "main": "index.js",
  "repository": "https://github.com/bardaq/boilerplates.git",
  "author": "Dmitry Klymenko",
  "license": "MIT",
  "private": true,
  "root": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "**/react-scripts",
      "**/react-scripts/**"
    ]
  },
  "scripts": {
    "start": "lerna run start --parallel",
    "start:client": "lerna run start:dev --scope @monorepo/client --stream --parallel",
    "start:dev": "lerna run start:dev --stream --parallel",
    "clean": "lerna run clean && rimraf node_modules yarn.lock",
    "bootstrap": "yarn && lerna yarn && yarn build:dev",
    "build": "lerna run build",
    "build:dev": "lerna run build:dev",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/concurrently": "^5.2.1",
    "@types/jest": "^26.0.7",
    "@types/lodash": "^4.14.158",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-jest": "^26.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "lodash": "^4.17.19"
  }
}
