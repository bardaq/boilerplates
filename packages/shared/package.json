{
  "name": "@monorepo/shared",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Dmitry Klymenko",
  "license": "MIT",
  "scripts": {
    "watch-ts": "tsc -w",
    "watch-test": "yarn test -- --watchAll",
    "clean": "rimraf node_modules yarn.lock dist",
    "test": "yarn jest --colors"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/lib/"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/lib/$1"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
