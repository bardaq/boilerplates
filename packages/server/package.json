{
    "name": "@monorepo/server",
    "version": "1.0.0",
    "main": "dist/index.js",
    "author": "Dmitry Klymenko",
    "license": "MIT",
    "_moduleAliases": {
        "@root": "dist/daos",
        "@entities": "dist/entities"
    },
    "scripts": {
        "build": "rimraf dist && tsc --build tsconfig.prod.json && yarn build:after",
        "build:dev": "rimraf dist && tsc --build tsconfig.json && yarn build:after",
        "build:after": "mv dist/server/src/* ./dist/ && rimraf dist/server",
        "start": "node dist/index.js",
        "start:dev": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
        "watch-ts": "tsc -w",
        "watch-test": "yarn test -- --watchAll",
        "watch-node": "nodemon dist/server.js",
        "clean": "rimraf node_modules yarn.lock dist"
    },
    "dependencies": {
        "@monorepo/shared": "^1.0.0",
        "@types/express": "^4.17.7",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "module-alias": "^2.2.2",
        "nodemon": "^2.0.4"
    }
}
