{
  "name": "@monorepo/server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Dmitry Klymenko",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc --build tsconfig.prod.json",
    "build:dev": "rimraf dist && tsc --build tsconfig.json",
    "start": "node dist/index.js",
    "start:dev": "nodemon",
    "watch-ts": "tsc -w",
    "test": "yarn jest",
    "watch-test": "yarn jest -- --watchAll",
    "clean": "rimraf node_modules yarn.lock dist"
  },
  "dependencies": {
    "@monorepo/shared": "^1.0.0",
    "command-line-args": "^5.1.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "helmet": "^3.23.3",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/module-alias": "^2.0.0",
    "@types/morgan": "^1.9.1",
    "nodemon": "^2.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "dist/**/*.ts"
    ],
    "ext": "ts",
    "ignore": [
      "**/*.test.ts"
    ],
    "exec": "tsc --build tsconfig.json && node dist/index.js"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).ts"
    ]
  }
}
